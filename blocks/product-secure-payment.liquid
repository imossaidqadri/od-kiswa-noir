

{% assign block_settings = block.settings %}

<div
  class="product-secure-payment spacing-style"
  style="{% render 'spacing-style', settings: block_settings %}"
  {{ block.shopify_attributes }}
>
  <div class="product-info-item">
    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5">
      <rect x="5" y="9" width="10" height="7" rx="1"/>
      <path d="M7 9V6a3 3 0 016 0v3"/>
    </svg>
    <span>Flexible and secure payment</span>
  </div>
</div>

{% stylesheet %}
  .product-info-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .product-info-item svg {
    flex-shrink: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Secure Payment",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "Displays secure payment information"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Secure Payment",
      "category": "t:categories.product"
    }
  ]
}
{% endschema %}
