

{% assign block_settings = block.settings %}

<div
  class="product-wishlist spacing-style"
  style="{% render 'spacing-style', settings: block_settings %}"
  {{ block.shopify_attributes }}
>
  <a href="#" class="product-info-item">
    <span class="product-info-item__icon">
      {{ 'icon-heart.svg' | inline_asset_content }}
    </span>
    <span>Add to Wishlist</span>
  </a>
</div>

{% stylesheet %}
  .product-info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: inherit;
  }

  .product-info-item:hover {
    text-decoration: underline;
  }

  .product-info-item__icon {
    display: inline-flex;
    flex-shrink: 0;
  }

  .product-info-item__icon svg {
    width: 16px;
    height: 16px;
    fill: currentColor;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Add to Wishlist",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "Displays an 'Add to Wishlist' link"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Add to Wishlist",
      "category": "t:categories.product"
    }
  ]
}
{% endschema %}
