<footer class="footer group flex justify-between gap-[10px] p-5 items-center md:grid md:grid-cols-12">
  <a href="https://otherdev.com" class="footer__link footer__link--copyright md:col-span-7 block uppercase">
    &copy; {{ 'now' | date: '%Y' }} Other Dev
  </a>

  {% if section.settings.studio_visits_url != blank %}
    <a href="{{ section.settings.studio_visits_url }}" class="footer__link footer__link--credit hidden md:block md:col-span-2">
      Studio Visits
    </a>
  {% endif %}

  {% if section.settings.instagram_url != blank %}
    <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" class="footer__link footer__link--nav md:col-span-2">
      Instagram
    </a>
  {% endif %}
  {% if section.settings.facebook_url != blank %}
    <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" class="footer__link footer__link--nav hidden md:block md:col-span-2">
      Facebook
    </a>
  {% endif %}
  {% if section.settings.twitter_url != blank %}
    <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener" class="footer__link footer__link--nav hidden md:block md:col-span-2">
      Twitter
    </a>
  {% endif %}

  <a href="{{ section.settings.terms_url | default: '/pages/terms' }}" class="footer__link footer__link--nav hidden md:block md:col-span-2">
    Terms
  </a>

  <a href="{{ section.settings.privacy_url | default: '/pages/privacy' }}" class="footer__link footer__link--nav hidden md:block md:col-span-1">
    Privacy
  </a>
</footer>

{% stylesheet %}
  .footer {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-foreground, #000000);
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .footer__link {
    text-decoration: none;
    color: inherit;
    transition: opacity 0.1s ease;
  }

  .group:hover .footer__link {
    opacity: 0.5;
  }

  .footer__link:hover {
    opacity: 1;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "header",
      "content": "Footer Links"
    },
    {
      "type": "url",
      "id": "studio_visits_url",
      "label": "Studio Visits URL"
    },
    {
      "type": "header",
      "content": "t:general.social_media"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "t:labels.instagram_url"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "t:labels.facebook_url"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "t:labels.twitter_url"
    },
    {
      "type": "header",
      "content": "Footer Links"
    },
    {
      "type": "url",
      "id": "terms_url",
      "label": "Terms URL",
      "info": "Defaults to /pages/terms if not set"
    },
    {
      "type": "url",
      "id": "privacy_url",
      "label": "Privacy URL",
      "info": "Defaults to /pages/privacy if not set"
    }
  ]
}
{% endschema %}
